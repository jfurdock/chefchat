{
	"expo": {
		"name": "ChefChat",
		"slug": "chefchat",
		"version": "1.0.0",
		"orientation": "portrait",
		"icon": "./assets/images/icon.png",
		"scheme": "chefchat",
		"userInterfaceStyle": "light",
		"splash": {
			"image": "./assets/images/splash-icon.png",
			"resizeMode": "contain",
			"backgroundColor": "#F7F3EE"
		},
		"ios": {
			"supportsTablet": true,
			"usesAppleSignIn": true,
			"bundleIdentifier": "com.company.chefchat",
			"appleTeamId": "M2528FKS34",
			"googleServicesFile": "./GoogleService-Info.plist",
			"entitlements": {
				"aps-environment": "development",
				"com.apple.developer.applesignin": ["Default"]
			},
			"infoPlist": {
				"NSMicrophoneUsageDescription": "ChefChat needs microphone access so you can cook hands-free with voice commands.",
				"NSSpeechRecognitionUsageDescription": "ChefChat uses speech recognition to understand your cooking questions in real time.",
				"UIBackgroundModes": ["remote-notification"],
				"CFBundleURLTypes": [
					{
						"CFBundleURLSchemes": ["chefchat", "com.company.chefchat"]
					},
					{
						"CFBundleURLSchemes": ["exp+chefchat"]
					},
					{
						"CFBundleURLSchemes": [
							"app-1-277668187996-ios-96552508eef1b74ef0bb99"
						]
					}
				]
			}
		},
		"android": {
			"adaptiveIcon": {
				"foregroundImage": "./assets/images/adaptive-icon.png",
				"backgroundColor": "#F7F3EE"
			},
			"package": "com.company.chefchat",
			"googleServicesFile": "./google-services.json",
			"permissions": ["RECORD_AUDIO"]
		},
		"web": {
			"bundler": "metro",
			"output": "static",
			"favicon": "./assets/images/favicon.png"
		},
		"plugins": [
			"@react-native-firebase/app",
			"@react-native-firebase/auth",
			[
				"expo-audio",
				{
					"microphonePermission": "ChefChat needs microphone access so you can cook hands-free."
				}
			],
			[
				"expo-speech-recognition",
				{
					"microphonePermission": "ChefChat needs microphone access so you can cook hands-free.",
					"speechRecognitionPermission": "ChefChat needs speech recognition so it can understand your voice while cooking."
				}
			],
			[
				"expo-build-properties",
				{
					"ios": {
						"useFrameworks": "static"
					}
				}
			],
			"expo-router",
			"./plugins/withFirebaseFix"
		],
		"extra": {
			"revenueCatApiKeyIos": ""
		},
		"experiments": {
			"typedRoutes": true
		}
	}
}
